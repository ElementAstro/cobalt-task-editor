{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Cobalt Task Editor default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-copy-file",
    "fs:allow-read-dir",
    "fs:allow-stat",
    {
      "identifier": "fs:scope",
      "allow": [
        "$DOCUMENT/**",
        "$APPDATA/**",
        "$APPCONFIG/**",
        "$HOME/NINA/**",
        "$HOME/Documents/NINA/**"
      ]
    },
    "clipboard-manager:default",
    "clipboard-manager:allow-read-text",
    "clipboard-manager:allow-write-text",
    "notification:default",
    "notification:allow-notify",
    "notification:allow-request-permission",
    "shell:default",
    "shell:allow-open",
    "os:default",
    "os:allow-platform",
    "os:allow-version",
    "os:allow-os-type",
    "os:allow-arch",
    "os:allow-locale",
    "process:default",
    "process:allow-exit",
    "process:allow-restart"
  ]
}
